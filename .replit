run = "python main.py"
modules = ["python-3.12", "nix"]

# 部署配置
[deployment]
build = "pip install -e ."
deploymentTarget = "vm"
run = ["python", "main.py"]

# 自动重启
[debugger]
enabled = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5006
externalPort = 80

[agent]
expertMode = true

# 环境变量文件 (不会被提交到代码仓库)
